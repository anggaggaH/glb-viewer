{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES6",
		"jsx": "react-jsx",
		"allowJs": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "**/node_modules/*", "dist", "**/dist/*"],
	"include": ["./src/**/*"]
}
